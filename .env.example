# Server
NODE_ENV=development
PORT=3000
HOST=0.0.0.0

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/auth_service?schema=public

# Redis
REDIS_HOST=127.0.0.1
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT
JWT_ACCESS_SECRET=votre-secret-access-min-32-caracteres-ici
JWT_REFRESH_SECRET=votre-secret-refresh-min-32-caracteres-ici
JWT_ACCESS_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Bcrypt
BCRYPT_SALT_ROUNDS=12

# SMS Provider
SMS_PROVIDER_URL=
SMS_PROVIDER_API_KEY=
SMS_SENDER_ID=AuthService

# Email (secondaire au SMS)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000

# RGPD
LOGIN_ATTEMPTS_RETENTION_DAYS=90
